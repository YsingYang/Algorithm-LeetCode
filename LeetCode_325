//problem of dp and hash 
class Solution {
public:
    int maxSubArrayLen(vector<int>& nums, int k) {
        int sum = 0 ,maxLen = 0;
        unordered_map<int,int> mp;
        mp[0] = -1;
        for(int i = 0 ; i < nums.size() ; ++i){
            sum += nums[i];
            if(mp.find(sum-k)!=mp.end()){
                maxLen = max(maxLen,i-mp[sum-k]);
            }
            if(mp.find(sum)==mp.end())mp[sum] = i;
        }
        return maxLen;
    }
};
